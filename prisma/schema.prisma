generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Detta är models för våra user och products som vi ska använda i vår databas
model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String
  password String // ska bli hashed password
  isAdmin  Boolean @default(false)
  order    Order[] //en user kan ha flera orders
}

model Order {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id]) //en order kan bara vara kopplad till en user
}

model Product {
  image       String
  id          Int    @id @default(autoincrement())
  title       String
  price       Int
  description String
}

model Category {
  id   Int    @id @default(autoincrement())
  name String @unique
}
